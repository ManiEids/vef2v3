generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        String      @id @default(uuid())
  slug      String      @unique
  title     String
  questions Question[]
}

model Question {
  id         String   @id @default(uuid())
  question   String
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  answers    Answer[]
}

model Answer {
  id         String   @id @default(uuid())
  answer     String
  isCorrect  Boolean
  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
}
