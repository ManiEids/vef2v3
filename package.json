{
  "name": "vef2-v3",
  "version": "1.0.0",
  "type": "module",
  "description": "Web API for quiz application",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "migrate": "prisma migrate deploy && prisma db seed",
    "seed": "prisma db seed",
    "seed:remote": "tsx src/utils/seed-db.ts",
    "postinstall": "prisma generate",
    "test": "node --test",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.8.6",
    "@prisma/client": "^5.10.0",
    "hono": "^4.1.2",
    "xss": "^1.0.14",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/fs-extra": "^11.0.0",
    "eslint": "^8.56.0",
    "prisma": "^5.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
